{% extends 'base.html.twig' %}

{% block title %}U-Couleur | Ultrage{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/@jaames/iro@5"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="{{ asset('js/ucouleur01.js') }}"></script>
{% endblock %}

{% block body %}
    {% if app.user %}
        {% for key, value in couleurs %}
            <div class="colorFondUser" color="{{ value.colorCode }}" style="width: 100px; height: 50px; margin: 30px; border-radius: 10px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; background-image: url('{{ asset('img/fond_alpha.png') }}'); overflow: hidden;">
                <div class="colorsUser" style="width: 100%; height: 100%; cursor: pointer; background-color: {{ value.colorCode }};">{{ value.paletteNumber }}</div>
            </div>
        {% endfor %}
        <textarea id="texteKeywords" placeholder="Entrez les mots clefs décrivant la couleur (séparer les mots par des virgules)"></textarea>
        <button id="addColor">Enregistrer la couleur</button>
    {% endif %}

    <div id="picker"></div>
    <div id="colorFond" style="width: 100px; height: 50px; margin: 30px; border-radius: 10px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; background-image: url('{{ asset('img/fond_alpha.png') }}'); overflow: hidden;">
        <div id="color" style="width: 100%; height: 100%; cursor: pointer;"></div>
    </div>
    <input type="text" id="codeHexColor" name="codeHexColor" value="#ffffff">
    <input type="button" id="btnHexColor" value="Changer la couleur">
    <input type="text" id="codeRgbColor" value="rgba(255, 255, 255)">
    <input type="button" id="btnRgbColor" value="Changer la couleur">
    <input type="text" id="codeHslColor" value="hsla(0, 0%, 100%)">
    <input type="button" id="btnHslColor" value="Changer la couleur">
    <br><br>
    <button id="randomColor">Générer aléatoirement une couleur</button>
    <br><br>
    <aside>
        <div class="colorPresave" id="colorPresaveNoir" style="width: 80px; display: flex; flex-direction:row; justify-content: space-between; cursor: pointer; margin: 20px 0;">Noir<div style="width: 20px; height: 20px; border-radius: 20px; background-color: #000000; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div></div>
        <div class="colorPresave" id="colorPresaveBlanc" style="width: 80px; display: flex; flex-direction:row; justify-content: space-between; cursor: pointer; margin: 20px 0;">Blanc<div style="width: 20px; height: 20px; border-radius: 20px; background-color: #ffffff; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div></div>
        <div class="colorPresave" id="colorPresaveRouge" style="width: 80px; display: flex; flex-direction:row; justify-content: space-between; cursor: pointer; margin: 20px 0;">Rouge<div style="width: 20px; height: 20px; border-radius: 20px; background-color: #ff0000; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div></div>
        <div class="colorPresave" id="colorPresaveVert" style="width: 80px; display: flex; flex-direction:row; justify-content: space-between; cursor: pointer; margin: 20px 0;">Vert<div style="width: 20px; height: 20px; border-radius: 20px; background-color: #00ff00; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div></div>
        <div class="colorPresave" id="colorPresaveBleu" style="width: 80px; display: flex; flex-direction:row; justify-content: space-between; cursor: pointer; margin: 20px 0;">Bleu<div style="width: 20px; height: 20px; border-radius: 20px; background-color: #0000ff; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div></div>
    </aside>
{% endblock %}