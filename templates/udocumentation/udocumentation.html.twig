{% extends 'base.html.twig' %}

{% block title %}U-Documentation{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
            integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"
            async></script>
{% endblock %}

{% block body %}
    <section class="px-4 py-5">
        <div class="row m-0 mb-5">
            <div class="bg-body border rounded p-3">
                <form id="filter_documentation" role="search">
                    <p class="fs-4">Filtrer la documentation par :</p>

                    <div class="d-flex gap-3">
                        <input class="form-control mb-3" type="search" placeholder="Rechercher"
                               aria-label="Effectuer une recherche">

                        {% if categories is not empty %}
                        <select class="form-select mb-3" aria-label="Sélectionner une catégorie" name="categories">
                            <option selected>Sélectionner une catégorie</option>
                            {% for category in categories %}
                            <option value="{{ category }}">{{ category|capitalize }}</option>
                            {% endfor %}
                        </select>
                        {% endif %}
                    </div>

                    <div class="d-flex gap-3">
                        <button class="btn btn-success" type="submit">Rechercher</button>
                        <button class="btn btn-outline-secondary" type="reset">Réinitialiser</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row m-0 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <p class="resultList fs-3 m-0">1 Documentations correspondent</p>

                <div>
                    <select class="form-select" aria-label="Trier la liste">
                        <option value="release_date_recent" selected>Date de création (récent)</option>
                        <option value="release_date_ancient">Date de création (ancien)</option>
                        <option value="update_date_recent">Date de modification (récent)</option>
                        <option value="update_date_ancient">Date de modification (ancien)</option>
                        <option value="title_increase">Titre (croissant)</option>
                        <option value="title_decrease">Titre (décroissant)</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row m-0 mb-4 g-3" data-masonry='{"percentPosition": true }'>
            {% for doc in docs %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-header text-body-secondary">
                            {% if doc.category is not empty %}
                                {% for category in doc.category %}
                                    <span class="badge text-bg-secondary">{{ category }}</span>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><strong>{{ doc.title }}</strong></h5>
                            {% if doc.excerpt is not empty %}
                                <p class="card-text">{{ doc.excerpt }}</p>
                            {% endif %}
                            <p class="card-text">
                                <small class="text-body-secondary me-3">
                                    <i class="bi bi-clock me-1"></i>
                                    <time datetime="{{ doc.releaseDate|date("Y-m-d") }}">{{ doc.releaseDate|format_datetime('long', 'short', locale='fr') }}</time>
                                </small>
                                {% if doc.updateDate is not empty %}
                                    <small class="text-body-secondary">
                                        <i class="bi bi-wrench-adjustable-circle me-1"></i>
                                        <time datetime="{{ doc.updateDate|date("Y-m-d") }}">{{ doc.updateDate|format_datetime('long', 'short', locale='fr') }}</time>
                                    </small>
                                {% endif %}
                            </p>
                            <a href="{{ path('app_udocumentation_view', { 'id': doc.id }) }}"
                               class="btn btn-primary stretched-link w-100">En savoir plus</a>
                        </div>
                        <div class="card-footer text-body-secondary">
                            <small class="text-body-secondary">Par {{ doc.author }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}