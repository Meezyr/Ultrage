<!DOCTYPE html>

{% set titrePage = block("title") %}

<html lang="fr" class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Tableau de bord{% endblock %} - ULTRAGE</title>
        <link rel="icon" href="{{ asset('img/favicon.png') }}">

        <!-- Import styles -->
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>

    <body class="h-100">
        <main class="d-flex flex-row">
            {{ block("sidebar", "_components/sidebar.html.twig") }}

            <div class="content text-bg-light">
                {% if dataStatusbar is defined %}
                    {{ block("statusbar", "_components/statusbar.html.twig") }}
                {% endif %}

                {% block body %}{% endblock %}
            </div>
        </main>

        <!-- Import scripts -->
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <script src="{{ asset('js/app.js') }}"></script>
    </body>
</html>
